<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#08AB9E"
    tools:context="com.example.lyan.littledenver.SignUpActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nama"
        android:background="@drawable/my_input"
        android:layout_marginTop="163dp"
        android:paddingBottom="@dimen/abc_button_inset_vertical_material"
        android:paddingTop="@dimen/abc_button_inset_vertical_material"
        android:paddingRight="@dimen/abc_button_inset_horizontal_material"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:hint="NAMA LENGKAP"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/tempat"
        android:background="@drawable/my_input"
        android:paddingBottom="@dimen/abc_button_inset_vertical_material"
        android:paddingTop="@dimen/abc_button_inset_vertical_material"
        android:paddingRight="@dimen/abc_button_inset_horizontal_material"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:hint="TEMPAT LAHIR"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:background="@drawable/my_input"
        android:paddingBottom="@dimen/abc_button_inset_vertical_material"
        android:paddingTop="@dimen/abc_button_inset_vertical_material"
        android:paddingRight="@dimen/abc_button_inset_horizontal_material"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:hint="TANGGAL LAHIR"
        android:drawableEnd="@drawable/calendar112"
        android:drawableRight="@drawable/calendar112"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:background="@drawable/my_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1" />


</LinearLayout>
